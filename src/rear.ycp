/**
 * File:	clients/rear.ycp
 * Package:	Configuration of rear
 * Summary:	Main file
 * Authors:	Thomas Goettlicher <tgoettlicher@suse.de>
 *
 * $Id: rear.ycp 27914 2006-02-13 14:32:08Z locilka $
 *
 * Main file for rear configuration. Uses all other files.
 */

{

/***
 * <h3>Configuration of rear</h3>
 */

textdomain "rear";

/* The main () */
y2milestone ("----------------------------------------");
y2milestone ("Rear module started");

import "Progress";
import "Report";
import "Summary";

import "CommandLine";
include "rear/wizards.ycp";

map cmdline_description = $[
    "id" 	: "rear",
    /* Command line help text for the Xrear module */
    "help"	: _("Configuration of rear"),
    "guihandler"        : RearSequence,
    "initialize"        : Rear::Read,
    "finish"            : Rear::Write,
    "actions"           : $[
	// FIXME TODO: fill the functionality description here
    ],
    "options"		: $[
	// FIXME TODO: fill the option descriptions here
    ],
    "mappings"		: $[
	// FIXME TODO: fill the mappings of actions and options here
    ]
];

/* is this proposal or not? */
boolean propose = false;
list args = WFM::Args();
if(size(args) > 0) {
    if(is(WFM::Args(0), path) && WFM::Args(0) == .propose) {
        y2milestone("Using PROPOSE mode");
        propose = true;
    }
}

/* main ui function */
any ret = nil;

if(propose) ret = RearAutoSequence();
else ret = CommandLine::Run(cmdline_description);
y2debug("ret=%1", ret);

/* Finish */
y2milestone("Rear module finished");
y2milestone("----------------------------------------");

return ret;

/* EOF */
}
